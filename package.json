{
  "name": "auction-contract",
  "version": "0.1.0",
  "description": "Auction smart contracts",
  "private": true,
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/windranger-io/auction-contract"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "deploy-ropsten": "npx hardhat run scripts/deploy.ts --network ropsten",
    "deploy-kovan": "npx hardhat run scripts/deploy.ts --network kovan",
    "deploy-mainnet": "npx hardhat run scripts/deploy.ts --network mainnet",
    "select-ropsten": "npx hardhat run scripts/selectWinners.ts --network ropsten",
    "select-mainnet": "npx hardhat run scripts/selectWinners.ts --network mainnet",
    "format": "npm run format-ts && npm run format-sol",
    "format-ts": "prettier '**/*.ts' --write",
    "format-sol": "prettier '**/*.sol' --write",
    "lint": "npm run lint-ts && npm run lint-sol",
    "lint-ts": "eslint . --ext .ts",
    "lint-sol": "solhint ./contracts/**/*.sol",
    "plant": "npx node-plantuml ./docs/specs",
    "prepare": "husky install",
    "test": "mocha --timeout 10000 --exit --recursive --require ts-node/register 'test/**/*.test.ts'"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.2.1",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/contracts": "4.8.0",
    "@openzeppelin/contracts-upgradeable": "4.8.0",
    "@openzeppelin/hardhat-upgrades": "1.21.0",
    "@typechain/ethers-v5": "10.1.1",
    "@typechain/hardhat": "6.1.4",
    "@types/bunyan": "1.8.8",
    "@types/chai": "4.3.4",
    "@types/chai-as-promised": "7.1.5",
    "@types/mocha": "10.0.0",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "bunyan": "1.8.15",
    "chai": "4.3.7",
    "chai-as-promised": "7.1.1",
    "cross-fetch": "3.1.5",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethereum-waffle": "3.4.4",
    "ethereumjs-wallet": "1.0.2",
    "ethers": "5.7.2",
    "hardhat": "2.12.2",
    "hardhat-gas-reporter": "1.0.9",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "mocha": "10.1.0",
    "node-plantuml": "windranger-io/node-plantuml#b9df63e",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0",
    "solhint": "3.3.7",
    "ts-node": "10.9.1",
    "typechain": "8.1.1",
    "typescript": "4.9.3",
    "dotenv": "16.0.3"
  }
}
